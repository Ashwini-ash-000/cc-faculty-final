<%- include('../partials/head'); %>
<%- include('../partials/header'); %>

    <div class="form-container">
        <h2>Submit a Suggestion</h2>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/student/submit-suggestion" method="POST">
            <div class="form-group">
                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject" class="form-control" value="<%= typeof subject != 'undefined' ? subject : '' %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control" rows="7" required><%= typeof description != 'undefined' ? description : '' %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Suggestion</button>
            <a href="/student/dashboard" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

<%- include('../partials/footer'); %>